@using CvAsp2.Tool
@model IndexViewModel
@inject SessionManager _session

@{
    ViewData["Title"] = "Index";
}


<div class="float-end">
@if (!(_session.CurrentUser is null))
{
    <div class="g-col4"></div>
    <h2>
        <a asp-action="Create">| Ajouter des infos</a>
    </h2>
}
</div>
@if (_session.CurrentUser is null)
{

        <h5 asp-action="Create">Connecter vous pour ajouter vos infos</h5>
    
}


<div>
   @foreach (var item in Model.InfoPerso)
    {
        @if(!(_session.CurrentUser is null))
      {
          <div class="float-end">
            <h2 >
            @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) 
            </h2>
          </div>
           
      }
            <div class="mt-5">
                <h1>
                 @Html.DisplayFor(modelItem => item.FirstName)
                </h1>
                <h1>
                   @Html.DisplayFor(modelItem => item.Name)
                </h1>
                <h5 class="mt-5">
                 <i class="fa-solid fa-phone"></i>  @Html.DisplayFor(modelItem => item.Téléphone)
                </h5>
                  <h5 class="mt-3">
                     <i class="fa-solid fa-house"></i>  @Html.DisplayFor(modelItem => item.Adress)
                  </h5>
                  <h5 class="mt-3">
                  <i class="fa-solid fa-at"></i> @Html.DisplayFor(modelItem => item.Email)
                 </h5>
            </div>  
            <div>
                <img  style="display:block; position:absolute;margin-left:650px;margin-top:-300px" src="images/PhotoCVrecadré..jpg">
            </div>

            <div class="mt-5">
                <h5>
                  <i class="fa-solid fa-school"></i> @Html.DisplayFor(modelItem => item.Etablissement)
                </h5>
                <h5>
                 <i class="fa-solid fa-user-graduate"></i> @Html.DisplayFor(modelItem => item.Diplome)
                </h5>
            </div>
            <div class="mt-5">
                 <table class="table ">
                     <thead>
                         <tr>
                             <th>Qualités</th>
                             <th>Défaults</th>
                         </tr>
                     </thead>
                     <tbody>
                         <tr>
                             <td>@Html.DisplayFor(modelItem => item.Qualité1)</td> 
                             <td>@Html.DisplayFor(modelItem => item.Default1)</td>

                         </tr>
                         <tr>
                             <td>@Html.DisplayFor(modelItem => item.Qualité2)</td>
                             <td>@Html.DisplayFor(modelItem => item.Default2)</td>
                         </tr>
                         <tr>
                             <td>@Html.DisplayFor(modelItem => item.Qualité3)</td>
                             <td>@Html.DisplayFor(modelItem => item.Default3)</td>
                         </tr>

                     </tbody>
                 </table>        
              </div>   
   
   
            <h5>
              
            </h5>
            <h5>
              
            </h5>
            <h5>
              
            </h5>

       
        

    }
</div>
