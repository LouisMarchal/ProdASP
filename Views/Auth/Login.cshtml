@model CvAsp2.Models.LoginForm

@{
    ViewData["Title"] = "Login";
}

<h1 style="text-align:center;margin-top:20vh">Se connecter</h1>


<div style="width:500px;margin:50px auto">
    <div>
        <form   asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button style="width:100%" type="submit" value="Se connecter" class="btn btn-lg btn-primary">Submit</button> 
            </div>
        </form>
    </div>
</div>


<div style="text-align:center">
    <a asp-controller="InfoPerso" asp-action="Index">Retourner à l'accueil</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}